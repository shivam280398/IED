<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shivam.ied.Clock"
    android:background="#1d4851">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALARM"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textSize="50dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/textView2"/>
    <TextView
        android:text=":"
        android:textSize="50dp"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="160dp"/>

    <EditText
        android:id="@+id/edt2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textSize="50dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="200dp"/>



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/on"
        android:background="@null"
        android:adjustViewBounds="true"
        android:src="@drawable/set"
        android:scaleType="fitCenter"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:layout_below="@+id/edt"
        android:layout_toLeftOf="@+id/abt"
        android:layout_toStartOf="@+id/abt"
        android:layout_marginTop="27dp" />
    <!--
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/off"
            android:src="@drawable/red"
            android:background="@null"
            android:layout_above="@+id/discnt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="153dp" />
    -->
    <TextView
        android:id="@+id/data"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/on"
        android:layout_marginLeft="140dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discnt"
            android:src="@drawable/disconnect"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abt"
            android:background="@null"
            android:onClick="about"
            android:src="@drawable/about"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
